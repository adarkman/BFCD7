MAKE=@gnumake@
CC=@CC@
CPP=@CXX@
LIBS=@LIBS@ -lm -lstdc++
INSTALL=@INSTALL@
LN=@LN_S@
GNATMAKE=@gnatmake@

CTAGS=ctags

ARCH=@target@

BFCD_LIB_NAME=libbfcd.so.7
BFCD_LIB=libbfcd.so

SRC=itoa.c malloc.c memmanager.cpp
OBJS=itoa.o malloc.o memmanager.o

prefix=@prefix@
BIN_DIR=@exec_prefix@/bin
MAN_DIR=@mandir@
BFCD_DATA_DIR=@datarootdir@/bfcd7/lib
BFCD_LIB_DIR=@prefix@/lib
BFCD_SHARE_DIR=@datarootdir@/bfcd7

CADDFLAGS=@CFLAGS@
INCLUDE_DIRS=-I/usr/local/include
CCFLAGS=-O2 -fPIC $(INCLUDE_DIRS) $(CFLAGS) -DDATA_DIR=\"$(BFCD_DATA_DIR)/\" \
	-DBASE_COMPILER=\"$(BFCD_DATA_DIR)/$(NAME)\" -D_GNU_SOURCE $(CADDFLAGS) $(CFLAGS)

CCOPT=-fomit-frame-pointer -finline-functions -fstrength-reduce \
	-funroll-loops -fno-rtti

%.o: %.c
	$(CC) $(CCOPT) $(CCFLAGS) -c $<

%.o: %.cpp
	$(CPP) $(CCOPT) $(CCFLAGS) -c $<

%.o: %.S
	$(CC) $(CCFLAGS) -c $<

all: $(BFCD_LIB_NAME) #gensys

install:
	../mkinstalldirs $(BFCD_LIB_DIR)
	$(INSTALL) -m 755 $(NAME) $(BFCD_LIB_DIR)

ctags:
	$(CTAGS) *.h *.c *.cpp

clean:
	rm -f $(OBJS)
	rm -f $(BFCD_LIB_NAME)
	rm -f $(BFCD_LIB)
	rm -f gensys
	echo >.depend

gensys: gensys.c
	$(CC) $(CCFLAGS) -o gensys gensys.c
	./gensys

$(BFCD_LIB_NAME): $(OBJS)
	$(CC) $(CCFLAGS) -shared -o $(BFCD_LIB_NAME) $(OBJS) $(LIBS)
	$(LN) -f $(BFCD_LIB_NAME) $(BFCD_LIB)

dep: depend

depend: .depend
	makedepend $(INCLUDE_DIRS) $(SRC) >/dev/null 2>&1

.depend:
	touch .depend

######################################################################
include .depend
